    <select id="getAssessments" resultType="com.zr.uniSoul.pojo.vo.AssessmentVO">
        SELECT
        id,
        category_id,
        name,
        introduction,
        questions_count,
        created_at,
        csCount
        FROM
        assessment
        <where>
            <if test="categoryId != 0">
                AND category_id = #{categoryId}
            </if>
        </where>
        ORDER BY created_at DESC
</select>
</mapper>