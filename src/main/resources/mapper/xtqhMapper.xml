<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zr.uniSoul.mapper.xtqhMapper">
    <insert id="follow">
        insert into follow(follower_id,following_id) values(#{user_id},#{role_id})
    </insert>
    <update id="update">
        update user set name=#{name},age=#{age},gender=#{gender},school=#{school},biography=#{biography},school=#{school},avatarUrl=#{avatarUrl}  where username = #{username}
    </update>


    <select id="findByPasswordAndUsername" resultType="com.zr.uniSoul.pojo.entity.UserDTO">
        select * from user where password = #{password} and username = #{username}
    </select>
    <select id="findByUsername" resultType="com.zr.uniSoul.pojo.entity.UserDTO">
        select * from user where username = #{username}
    </select>
    <select id="findIdByUsername" resultType="java.lang.Integer">
        select id from user where username = #{username}
    </select>
    <update id = "likes">
        update article
        set like_count = #{article_id}
        where id = #{user_id}
    </update>
</mapper>